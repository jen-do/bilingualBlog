<h1>{{heading}}</h1>

{{#if successupdate}}
    <h3>{{{__ "msg success update"}}}</h3>
    <p style="text-align: center"><strong><a href="{{link}}">{{{__ "msg success update link"}}}</a></strong></p>
{{/if}}

{{#if successaddproject}}
    <h3>{{{__ "msg success add project"}}}</h3>
    <strong style="text-align: center">
        <p><a href="{{linkProjectSite}}">{{{__ "msg success add project link projectsite"}}}</a></p>
        <p><a href="{{link}}">{{{__ "msg success add project link"}}}</a></p>
    </strong>
{{/if}}

<div class="projects-outer-container">
{{#each projectsEn}}
    {{#if en_name}}
    <div class="project-container" id="{{id}}">
        <a href="/projects/{{id}}"><img src={{image}}></a>
        <div class="project-text-container">
            <h2>{{en_name}}</h2>
            <p>{{en_short}}</p>
            {{#if en_tags}}<div class="project-tags">{{en_tags}}</div>{{/if}}
        </div>
    </div>
    {{/if}}
{{/each}}
</div>

<div class="projects-outer-container">
{{#each projectsDe}}
    {{#if de_name}}
        <div class="project-container">
            <a href="/projects/{{id}}"><img src={{image}}></a>
            <div class="project-text-container">
                <h2>{{de_name}}</h2>
                <p>{{de_short}}</p>
                {{#if de_tags}}<div class="project-tags">{{de_tags}}</div>{{/if}}
            </div>
        </div>
    {{/if}}
{{/each}}
</div>

{{#each singleProjectEn}}
    <div class="blog-roll-container">
        {{#if en_name}}
            <img src={{image}}>
            <div class="blog-text-container">
                <h1>{{en_name}}</h1>
                <div class="ta"><p><strong>{{en_short}}</strong></p></div>
                <div class="ta"><p>{{en_long}}</p></div>
                {{#if en_contribute}}<div class="ta"><p><strong>How to contribute</strong>: {{en_contribute}}</p></div>{{/if}}
                {{#if en_loc}}<p><strong>Location</strong>: {{en_loc}}</p>{{/if}}
                {{#if email}}<p><strong>Contact</strong>: {{email}}</p>{{/if}}
                {{#if en_web}}<p><strong>Web</strong>: <a href="{{en_web}}">{{en_web}}</a></p>{{/if}}
                {{#if en_tags}}<p class="project-tags">{{en_tags}}</p>{{/if}}
            </div>
        {{else}}
        <div class="blog-text-container">
            <p>Sorry, this content is only available in German.</p>
        </div>
        {{/if}}
    </div>
{{/each}}


{{#each singleProjectDe}}
<div class="blog-roll-container">
    {{#if de_name}}
        <img src={{image}}>
        <div class="blog-text-container">
            <h1>{{de_name}}</h1>
            <div class="ta"><p><strong>{{de_short}}</strong></p></div>
            <div class="ta"><p>{{de_long}}</p></div>
            {{#if de_contribute}}<div class="ta"><p><strong>Mitmachen</strong>: {{de_contribute}}</p></div>{{/if}}
            {{#if email}}<p><strong>Contact</strong>: {{email}}</p>{{/if}}
            {{#if de_loc}}<p><strong>Ort</strong>: {{de_loc}}</p>{{/if}}
            {{#if de_web}}<p><strong>Web</strong>: <a href="{{de_web}}">{{de_web}}</a></p>{{/if}}
            {{#if de_tags}}<p class="project-tags">{{de_tags}}</p>{{/if}}
        </div>
    {{else}}
        <div class="blog-text-container">
            <p>Sorry, den Artikel gibt es nur auf Englisch.</p>
        </div>
    {{/if}}
</div>
{{/each}}
