<h1>{{{__ "heading edit profile"}}}</h1>

{{#if err}}
    <p><strong>Something went wrong. Please try again.</strong></p>
{{/if}}


<form method="POST" autocomplete="off" enctype="multipart/form-data">
<div id="form-outer-container">
    <div class="form-inner-container">
        <h2>DE</h2>
        <label>Name des Projekts<input type="text" name="de_name"></label>
        <label>Kurzbeschreibung<textarea name="de_short"></textarea></label>
        <label>Langbeschreibung<textarea name="de_long"></textarea></label>
        <label>Beitragen<textarea name="de_contribute"></textarea></label>
        <label>Tags<input type="text" name="de_tags"></label>
        <label>Webseite<input type="text" name="de_web"></label>
    </div>
    <div class="form-inner-container">
        <h2>EN</h2>
        <label>Name of the project<input type="text" name="en_name"></label>
        <label>Short description<textarea name="en_short"></textarea></label>
        <label>Long description<textarea name="en_long"></textarea></label>
        <label>How to contribute<textarea name="en_contribute"></textarea></label>
        <label>Tags<input type="text" name="en_tags"></label>
        <label>Website<input type="text" name="en_web"></label>
    </div>
    <div class="form-inner-container">
        <label>Email<input type="email" name="contact" ></label>
        <label>Logo<input id="upload" type="file" accept="image/*" name="file"></label>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button>{{{__ "button publish"}}}</button>
    </div>
</div>
</form>
